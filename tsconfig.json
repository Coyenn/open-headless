{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "declarationDir": "./dist/types",
    "baseUrl": "./src",
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.cjs",
    "src/**/*.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
