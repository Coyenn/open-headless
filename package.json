{
  "name": "open-headless",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "eslint:check": "eslint --ext .ts,.tsx .",
    "eslint:fix": "eslint --fix --ext .ts,.tsx .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": true,
    "dts": true,
    "format": [
      "cjs",
      "esm"
    ]
  },
  "keywords": [],
  "author": "Tim Ritter <t-ritter-mail@web.de>",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/eslint": "^8.44.2",
    "@types/node": "^20.4.9",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.46.0",
    "eslint-config-next": "^13.4.12",
    "prettier": "^3.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  }
}
